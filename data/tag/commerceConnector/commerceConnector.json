		"name": "Commerce Connector - Cookie Setter",
		"type": "html",
		"parameter": [
			{
				"type": "TEMPLATE",
				"key": "html",
				"value": "<script>\n  if (location.href.match('commerceconnector')) {\n    {{js_set_cookie}}('commerceconnector', '1', { 'path' : '/' });\n  }\n</script>"
